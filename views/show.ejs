<%- include('partials/header') %>
<div class="ui main text container segment">
    <div class="ui huge header"><%=blog.title%></div>
    <div class="ui top attached">
        <div class="item">
            <img class="ui centered rounded image" src="<%=blog.image%>">
            <div class="content">
                <span>Posted by <b><%= blog.author%></b> on <%=blog.created.toDateString()%></span>
            </div>
            <div class="description">
                <p><%-blog.body%></p>
            </div>
            <% if(blog.author === user.username){ %>
            <a class="ui green inverted button" href="/blogs/<%=blog._id%>/edit" >Edit</a>
            <form id="delete" action="/blogs/<%=blog._id%>?_method=DELETE" method="POST">
                <button class="ui red inverted button">Delete</button>
            </form>
            <% } %>
        </div>
    </div>
</div>
<%- include('partials/footer') %>